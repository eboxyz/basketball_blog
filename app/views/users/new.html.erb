<div class="registerpage" style="padding-top: 150px; height: 800px; background-image: url(/assets/images/bird-erving.jpg);">
<h1 id="reg-header">Register here!</h1>

<%= form_for @user do |f| %>
  <% flash.each do |key, value| %>
    <div class="<%= key %>" > <%= value %> </div>
  <% end %>
  <div id="name-reg">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'email-font' %>
  </div>
  <div id="email-reg">
  <%= f.label :email %>
  <%= f.email_field :email, class: 'email-font'%>
  <br>
  </div>
  <div id="pw-reg">
  <%= f.label :password %>
  <%= f.password_field :password, class: 'email-font' %>
  <br>
  </div>
  <div id="pwc-reg">
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'email-font' %>
  <br>
  </div>
  <div id="sub-reg">
  <%= f.submit "Register!", :class => "btn btn-success" %>

  </div>
<% end %>
</div>
