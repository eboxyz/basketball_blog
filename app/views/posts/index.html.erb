<div id="postpage" class="col-lg-12" style="background-image: url(/assets/images/light-wood.jpg); background-size: 100%; background-repeat: repeat-y;">
  <div id="flashsuccess">
    <% flash.each do |key, value| %>
    <div class="<%= key %>"><%= value %></div>
    <% end %>
  </div>
  <div class="mng-btns">
    <%= link_to user_path(@user) do %>
      <id="prof-btn" class="btn btn-med btn-success">User Profile
      <% end %>
    <%= link_to add_post_path(@user) do %>
      <id="new-post-btn" class="btn btn-med btn-primary">Add New Post
      <% end %>
    <%= link_to destroy_session_path do %>
      <id="logout-btn" class="btn btn-med btn-danger">Logout
      <% end %>
  </div>
  <div class="allposts col-lg-12">
    <ul class="list-group" style="background-image: url(/assets/images/light-wood.jpg)">
      <% @posts.each { |post| %>
       <li class="list-group-item" id="eachpost" style="background-image: url(/assets/images/light-wood.jpg)">
          <strong><%= link_to post.title, post_path(post.id), :class => "title-font" %></strong>
          <br>

          <br>
          <div class="page-container">
            <%= embed(post.youtube_url) %>
          </div>
       </li>
      <% } %>
    </ul>
  </div>
</div>
